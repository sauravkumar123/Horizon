<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rel1"
    android:background="@drawable/eventphots"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Event">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="90dp"
        tools:context=".Event" />



    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/ic_baseline_notifications_24" />
    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"

        android:layout_marginTop="30dp"
        android:src="@drawable/ic_baseline_keyboard_backspace_24" />


    <TextView
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Events" />

<GridLayout
    android:layout_width="wrap_content"
   android:layout_centerInParent="true"
    android:layout_height="wrap_content"
    android:columnCount="2"
    android:rowCount="2">


    <androidx.cardview.widget.CardView
        android:layout_width="130dp"
        android:layout_height="130dp"
        app:cardBackgroundColor="@color/black"
        android:layout_marginStart="10dp"
        android:id="@+id/webinar"
        app:cardElevation="7dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imag1"
                android:src="@drawable/laptop"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imag1"
                android:text="Webinars"
                android:textSize="18dp"
                android:textColor="#EAB543"
                android:textStyle="bold"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                ></TextView>



        </RelativeLayout>





    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="10dp"
        app:cardBackgroundColor="@color/black"
        app:cardElevation="7dp"
        android:id="@+id/competition"
        android:background="@color/black" >




        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imag2"
                android:src="@drawable/compet"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imag2"
                android:text="Competition"
                android:textSize="18dp"
                android:textColor="#EAB543"
                android:textStyle="bold"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                ></TextView>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/black"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:cardElevation="7dp"
        android:background="@color/black" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imag3"
                android:src="@drawable/misc"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imag3"
                android:text="Misc"
                android:textSize="18dp"
                android:textColor="#EAB543"
                android:textStyle="bold"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                ></TextView>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@color/black"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:cardElevation="7dp"
        android:background="@color/black" >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imag4"
                android:src="@drawable/sunset"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/imag4"
                android:text="Night"
                android:textSize="18dp"
                android:textColor="#EAB543"
                android:textStyle="bold"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="7dp"
                ></TextView>



        </RelativeLayout>

    </androidx.cardview.widget.CardView>








</GridLayout>


</RelativeLayout>
